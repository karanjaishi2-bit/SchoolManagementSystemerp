@{
    ViewData["Title"] = "Home";
}

<!-- Banner -->
<div class="banner position-relative text-white text-center" style="background-image: url('/images/banner.jpg'); height: 60vh; background-size: cover; background-position: center;">
    <div class="overlay position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 d-flex justify-content-center align-items-center">
        <div>
            <h1 class="display-4">Welcome to Our School</h1>
            <p class="lead">Learn. Grow. Achieve.</p>
        </div>
    </div>
</div>

<!-- Cards Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Manage Students, Courses, Teachers, and Enrollment</h2>
    <div class="row">
        <!-- Card 1: Students -->
        <div class="col-md-4 mb-4">
            <div class="card shadow h-100 hover-shadow position-relative">
                <span class="badge bg-primary position-absolute top-0 start-100 translate-middle">@ViewBag.TotalStudents Students</span>
                <img src="/images/student.jpg" class="card-img-top" alt="Students">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Manage Students</h5>
                    <p class="card-text">Managing students and ensuring student’s records are accurate, securely stored</p>
                    <a href="/Student" class="btn btn-primary mt-auto">Add Student</a>
                </div>
            </div>
        </div>

        <!-- Card 2: Courses -->
        <div class="col-md-4 mb-4">
            <div class="card shadow h-100 hover-shadow position-relative">
                <span class="badge bg-success position-absolute top-0 start-100 translate-middle">@ViewBag.TotalCourses Courses</span>
                <img src="/images/course.jpg" class="card-img-top" alt="Courses">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Manage Courses</h5>
                    <p class="card-text">Managing courses and ensuring course records are accurate, securely stored</p>
                    <a href="/Course" class="btn btn-primary mt-auto">Add Course</a>
                </div>
            </div>
        </div>

        <!-- Card 3: Enrollment -->
        <div class="col-md-4 mb-4">
            <div class="card shadow h-100 hover-shadow position-relative">
                <span class="badge bg-warning position-absolute top-0 start-100 translate-middle">@ViewBag.TotalEnrollments Enrollments</span>
                <img src="/images/enrollment.jpg" class="card-img-top" alt="Enrollments">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Manage Enrollment</h5>
                    <p class="card-text">Managing enrollment and ensuring all records are accurate, securely stored</p>
                    <a href="/Enrollment" class="btn btn-primary mt-auto">Add Enrollment</a>
                </div>
            </div>
        </div>

        <!-- Optional Card 4: Billing -->
        <div class="col-md-4 mb-4">
            <div class="card shadow h-100 hover-shadow position-relative">
                <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">@ViewBag.TotalBilling Billing</span>
                <img src="/images/billing.jpg" class="card-img-top" alt="Billing">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Manage Billing</h5>
                    <p class="card-text">Manage billing and ensure all invoices and payments are accurate</p>
                    <a href="/Billing" class="btn btn-primary mt-auto">Go to Billing</a>
                </div>
            </div>
        </div>
    </div>
</div>
