@model SchoolManagement.Models.Teacher

<h2>Delete Teacher</h2>

@if (Model.Courses != null && Model.Courses.Any())
{
    <div class="alert alert-warning">
        <strong>Warning:</strong> This teacher is assigned to the following courses. You cannot delete this teacher until these courses are reassigned or deleted.
        <ul>
            @foreach (var course in Model.Courses)
            {
                <li>@course.Name</li>
            }
        </ul>
    </div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
}
else
{
    <h4>Are you sure you want to delete this teacher?</h4>
    <div>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
