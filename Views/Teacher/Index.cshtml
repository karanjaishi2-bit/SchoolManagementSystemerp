@model IEnumerable<SchoolManagement.Models.Teacher>

<h2>Teachers</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>@teacher.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-info btn-sm">Details</a>

                    @if (teacher.Courses != null && teacher.Courses.Any())
                    {
                        <!-- Disable Delete if teacher has courses -->
                        <button class="btn btn-danger btn-sm" disabled title="Cannot delete. Teacher has courses.">Delete</button>
                    }
                    else
                    {
                        <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add Teacher</a>
