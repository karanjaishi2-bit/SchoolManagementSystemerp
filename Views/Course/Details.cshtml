@model SchoolManagement.Models.Course

<h2>Edit Course</h2>

<form asp-action="Details" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="Fee"></label>
        <input asp-for="Fee" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="TeacherId">Teacher</label>
        <select asp-for="TeacherId" asp-items="ViewBag.Teachers" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
